<!doctype html>
<html>
	<head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700;900&display=swap" rel="stylesheet">
		<link rel="stylesheet" type="text/css" href="_styles/styles.css">
		<title>Among Us Sus Tracker</title>
	</head>
	<body>
		<header>
			<h1>Among Us Sus Tracker</h1>
			<button class="clear-all js-clear-all">Clear All</button>
		</header>
		<main>
			<div class="player-grid">
				{% for i in (1..10) %}
				<div class="player-card js-player-card">
					<div class="player-card__color">
						<div class="player-icon">
							<div class="player-icon__back"></div>
							<div class="player-icon__body"></div>
							<div class="player-icon__visor"></div>
							<div class="player-icon__dead"></div>
						</div>
						<div class="player-color select-wrapper">
							<select class="js-player-color">
								<option value="" disabled selected>Color</option>
								<option value="red">Red</option>
								<option value="blue">Blue</option>
								<option value="green">Green</option>
								<option value="pink">Pink</option>
								<option value="orange">Orange</option>
								<option value="yellow">Yellow</option>
								<option value="black">Black</option>
								<option value="white">White</option>
								<option value="purple">Purple</option>
								<option value="brown">Brown</option>
								<option value="teal">Teal</option>
								<option value="lime">Lime</option>
							</select>
						</div>
					</div>
					<div class="player-card__name">
						<div class="player-name input-wrapper">
							<input class="js-player-name" type="text" placeholder="Player Name" aria-label="Player Name" />
						</div>
					</div>
					<div class="player-card__status">
						<label class="player-status">
							<span class="label">Status:</span>
							<div class="select-wrapper">
								<select class="js-player-status">
									<option value="unknown">Unknown</option>
									<option value="safe">Safe</option>
									<option value="soft-clear">Soft Clear</option>
									<option value="sus">Sus</option>
									<option value="impostor">Impostor</option>
									<option value="dead">Dead</option>
									<option value="me">Me</option>
								</select>
							</div>
						</label>
					</div>
					<div class="player-card__notes">
						<div class="player-notes">
							<label class="player-notes__inner">
								<span class="label player-notes__label">Notes</span>
								<div class="textarea-wrapper player-notes__input-wrapper">
									<textarea class="js-player-notes"></textarea>
								</div>
							</label>
						</div>
					</div>
				</div>
				{% endfor %}
			</div>
		</main>
		<footer>
			<p><a href="http://byanyothername.me">Who made this?</a></p>
			<p>Obligatory disclaimer that I am not affiliated with InnerSloth, the makers of Among Us.</p>
		</footer>

		<script src="_scripts/script.js"></script>
	</body>
</html>